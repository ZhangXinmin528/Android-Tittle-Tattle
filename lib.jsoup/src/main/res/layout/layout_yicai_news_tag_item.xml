<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/StyleListPadding"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_yicai_tag_title"
        style="@style/StyleListItemTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="2月份沪深两市日均交易量9836亿元 环比大增40%" />

    <ImageView
        android:id="@+id/iv_yicai_tag_thumb"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_yicai_tag_title"
        tools:src="@drawable/icon_yicai" />

    <TextView
        android:id="@+id/tv_yicai_tag"
        style="@style/StyleListItemTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/shape_tab_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_yicai_tag_thumb"
        tools:text="全球金融市场巨震" />

    <TextView
        android:id="@+id/tv_yicai_tag_timestamp"
        style="@style/StyleListItemTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_yicai_tag_thumb"
        tools:text="2020-03-20 15:22" />

</android.support.constraint.ConstraintLayout>