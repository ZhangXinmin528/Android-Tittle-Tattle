<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/StyleListPadding"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_yicai_thumb"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:src="@drawable/icon_yicai"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        app:layout_constraintLeft_toRightOf="@id/iv_yicai_thumb"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_yicai_text_title"
            style="@style/StyleListItemTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="2月份沪深两市日均交易量9836亿元 环比大增40%" />

        <TextView
            android:id="@+id/tv_yicai_text_brief"
            style="@style/StyleListItemContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_yicai_text_title"
            tools:text="央行上个月数据显示，1月份沪市日均交易量为2793.82亿元，深市日均交易量为4224.29亿元。以此计算，2月份沪深两市日均交易量环比增长40%。" />

        <TextView
            android:id="@+id/tv_yicai_text_timestamp"
            style="@style/StyleListItemTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_yicai_text_brief"
            tools:text="2020-03-20 15:22" />
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>